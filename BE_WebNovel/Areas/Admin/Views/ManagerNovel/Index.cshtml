
@model PagedList.IPagedList<BE_WebNovel.Models.Book>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý truyện";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@section css {
    <link href="~/Areas/Admin/Content/css/ManagerNovelIndex.css" rel="stylesheet" />
}

<div class="col-12 col-lg-9">
    <div class="row mb-3">
        <div class="col-6 ms-auto">
            <form class="d-flex align-items-stretch rounded-pill m-2 w-100 custom-form bg-white" style="border: solid 2px #00dc82;">
                <input type="text" class="w-100 py-1 border-0 ps-3 rounded-pill flex-fill" placeholder="Search" style="outline: none;">
                <button type="submit" class="px-3 border-0 rounded-pill bg-body">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="d-flex justify-content-between my-3 flex-wrap">
            <h3 class="mb-3">Quản Lý Truyện</h3>
            <a href="./DangTruyen.html" class="btn btn-primary mb-3">Thêm truyện mới</a>
        </div>
        @*<div id="wrapperPages">
                <div class="data-container"></div>
                <div id="pagination-ForNovels" class="my-5"></div>
            </div>*@
        <div id="wrapperPages">
            <div class="data-container">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Truyện</th>
                                <th class="d-none d-md-table-cell">Số Chương</th>
                                <th>Người đăng</th>
                                <th class="d-none d-lg-table-cell">Ngày đăng</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @{
                                int stt = 1;
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <th>@stt</th>
                                        <td><a href="./ThongTinTruyen.html">Cổ Chân Nhân</a></td>
                                        <td class="d-none d-md-table-cell">2333</td>
                                        <td>MarioBaby</td>
                                        <td class="d-none d-lg-table-cell">22/02/2022</td>
                                        <td>
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#Novel${item}LockModal">Khóa</a> |
                                            <a href="#">Duyệt</a>
                                            <!-- Modal -->
                                            <div class="modal fade" id="Novel${item}LockModal" tabindex="-1" aria-labelledby="Novel${item}LockLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="Novel${item}LockLabel">Xác nhận khóa</h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            bạn có chắc muốn Khóa truyện "Cổ Chân Nhân ${item}" không?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                            <a href="#" class="btn btn-primary">Khóa</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="pagination-ForNovels" class="my-5">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>

    @section script{
        <script>
            // js side bar
            var linksSideBar = document.querySelectorAll('#Main .SideBar .nav-link');
            function removeActive() {
                linksSideBar.forEach(element => {
                    element.classList.remove('active');
                })
            }
            function start() {
                removeActive();
                linksSideBar.forEach(element => {
                    if (element.textContent.includes('Quản lý truyện')) {
                        element.classList.add('active')
                    }
                })
            }
            start();
        </script>

