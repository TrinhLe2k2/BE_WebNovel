                        }
                    })
                    document.addEventListener('click', function (event) {
                        if (!checkNavBar.contains(event.target) && !labelcheckbox.contains(event.target) && !nav.contains(event.target)) {
                            checkNavBar.checked = false;
                            nav.classList.add('d-none');
